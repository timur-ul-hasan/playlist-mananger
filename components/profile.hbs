  <div >
    <header class="navbar">
    <section class="navbar-section">
        <a href="/profile" class="btn btn-link">My Playlists</a>
        <a href="/account-info" class="btn btn-link">AccountInfo</a>
    </section>
</header>
<div>
    <h3>My Playlists:</h3>
    <table class="table">
    <thead>
        <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Status</th>
        <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {{#each playlist}}
            <tr>
                <td>{{this.id}}</td>
                <td>{{this.name}}</td>
                <td>{{this.status}}</td>
                <td>
                    <a href="playlist/{{this.id}}">View</a> 
                     | <a href="delete-playlist/{{this.id}}">Remove</a>
                     | <a href="/edit-playlist/{{this.id}}">Edit</a>
                    </td>    
              </tr>
            {{/each}}
        </ul>
    </tbody>
    </table>
    <div class="btn-group btn-group-block add-button-wrapper">
        {{#if authenticated}}
       <a href="/add-playlist"><button class="btn btn-primary">Add Playlist</button></a>
       {{/if}}
    </div>
</div>
</div>

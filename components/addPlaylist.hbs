<main>
  <div class="register-wrapper">
    <form action="/add-playlist" method="post">
        <fieldset >
            <div class="form-group">
                <label class="form-label" for="input-example-19">Name</label>
                <input class="form-input" type="text" id="input-example-19" placeholder="Name" name="name">
            </div>
            <div class="form-group">
                <label class="form-label">Status</label>
                <label class="form-radio">
                    <input type="radio" name="status" value="public">
                    <i class="form-icon"></i> Public
                </label>
                <label class="form-radio">
                    <input type="radio" name="status" value="private">
                    <i class="form-icon"></i> Private
                </label>
            </div>
             <div class="btn-group btn-group-block">
                <button class="btn btn-primary">Add Playlist</button>
            </div>
        </fieldset>
    </form>
  </div>
</main>
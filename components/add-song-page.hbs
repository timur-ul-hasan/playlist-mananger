<div class="register-wrapper">
    <form action="/add-song" enctype="multipart/form-data" method="POST">
        {{!-- {{#if error}}
            <div class="toast">
                <p>{{{error}}}</p>
            </div>
        {{/if}} --}}
        <fieldset>
            <input type="hidden" name="playlistId" value="{{playlistId}}">
            <div class="form-group">
                <label class="form-label" for="input-example-19">Song name</label>
                <input class="form-input" type="text" id="input-example-19" placeholder="Name" name="name" required>
            </div>
            <div class="form-group">
                <input type="file" name="song" required />
            </div>
            <div class="btn-group btn-group-block">
                <button class="btn btn-primary">Add Song</button>
            </div>
        </fieldset>
    </form>
</div>